@model AddBookViewModel
@{
    ViewData["Title"] = "AddBook";
}

<h1>AddBook</h1>

<form asp-action="AddBook" asp-controller="Book" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BookName">Book Name</label>
        <input type="text" class="form-control" asp-for="BookName">
        <span asp-validation-for="BookName"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookTitle">Book Title</label>
        <input type="text" class="form-control" asp-for="BookTitle">
        <span asp-validation-for="BookTitle"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorId">Author Name</label>
        <select class="form-control" asp-for="AuthorId" asp-items="ViewBag.Authors">
            
        </select>

    </div>

    <div class="form-group">
        <label for="file">File input</label>
        <input type="file" class="form-control-file" id="file" name="file">
    </div>
    <div class="form-group">
        <input type="submit"  value="Add Book" class="form-control" />
    </div>

</form>